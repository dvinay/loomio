                %br
                No credit card required
            .choose-plan-modal__plan--button
              %button.choose-plan-modal__select-button.choose-plan-modal__select-button--gift{ng-disabled: "group.subscriptionKind == 'gift'", ng-click: "chooseGiftPlan()", translate: "choose_plan_modal.select"}

        .u-td.choose-plan-modal__gutter-cell
